<% end %>

<div class="form-group">
  <%= f.label :name, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", :class => "form-control" %>
    <br>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :description, placeholder: "Description", :class => "form-control" %>
    <br>
  </div>
</div>

<div class="form-group">
  <%= f.label :image_url, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
      <%= f.file_field :image_url %>
    <br>
  </div>
</div>
<div class="actions">
  <%= admin_submit_btn %>
</div>
<br>
<% end %>