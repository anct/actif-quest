<%= form_for([:admin, @treasure], html: {class: "form-horizontal"}) do |f| %>
<% if @treasure.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@treasure.errors.count, "error") %> prohibited this admin_treasure from being saved:</h2>

  <ul>
    <% @treasure.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
