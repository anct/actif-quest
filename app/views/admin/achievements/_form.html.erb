<%= form_for([:admin, @achievement]) do |f| %>
<% if @achievement.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@achievement.errors.count, "error") %> prohibited this admin_achievement from being saved:</h2>

  <ul>
    <% @achievement.errors.full_messages.each do |message| %>
