</div>
<% end %>

<div class="form-group">
  <%= f.label :name, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
    <br>
  </div>
</div>

<div class="form-group">
  <%= f.label :condition, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :condition, placeholder: "Condition", class: "form-control" %>
    <br>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :description, placeholder: "Description", class: "form-control" %>
    <br>
  </div>
</div>

<div class="form-group">
   <%= f.label :icon_url, class: "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.file_field :icon_url %>
    <br>
  </div>
</div>

<br>
<div class="actions">
  <%= f.submit :class => "btn btn-primary" %>
</div>
<br>
<% end %>
