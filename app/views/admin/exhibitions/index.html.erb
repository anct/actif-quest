<h1><strong>展</strong>示一覧 <small>- Exhibition</small></h1>
<br>

<table class="table table-hover table-row-clickable">

  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr data-href="<%= admin_exhibition_path(exhibition) %>">
        <td><%= exhibition.name %></td>
        <td><%= exhibition.group_id %></td>
        <td>
          <%= link_to 'Edit', edit_admin_exhibition_path(exhibition), class: "btn btn-primary" %>
          <%= link_to 'Destroy', admin_exhibition_path(exhibition), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exhibition', new_admin_exhibition_path %>
