<%= form_for([:admin, @exhibition]) do |f| %>
<% if @exhibition.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@exhibition.errors.count, "error") %> prohibited this admin_exhibition from being saved:</h2>

  <ul>
    <% @exhibition.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<form class="form-horizontal">
  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
      <br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :introduction, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :introduction, autofocus: true, placeholder: "Introduction", class: "form-control" %>
      <br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_url, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.file_field :image_url, class: "form-control" %>
      <br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :group_id, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.select :group_id, @groups.map { |g| [g.name, g.id] }, {}, class: 'form-control' %>
      <br>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
</form>
<br>
<% end %>
