<h1 class="first">ユーザ一覧 <small>- Users</small></h1>
<br>

<table class="table table-hover table-row-clickable">

  <tbody>
    <% @users.each do |user| %>
      <tr class="pointer-cursor" data-href="<%= admin_user_path(user) %>">
        <td><%= user.name %></td>
        <td><%= user.screen_name %></td>
        <td><%= user.created_at.to_s(:db) %></td>
        <td><%= user.statuses.size %></td>
        <td>
          <%= admin_destroy_btn admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %><br>

<br>
