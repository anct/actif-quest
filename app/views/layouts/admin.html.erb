<!DOCTYPE html>
<html>
<head>
  <title>Admin - ActifQuest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="admin-header">
    <div class="container">
      <h1>Actif Quest <small>for Admin</small></h1>
    </div>
  </div>
  <div class="container">
    <% if admin_signed_in? %> 
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <%= admin_menu_item "展示 - Exhibitions", admin_exhibitions_path %>
          <%= admin_menu_item "グループ - Groups", admin_groups_path %>
          <%= admin_menu_item "管理者 - Admins", admin_admins_path %>
          <%= admin_menu_item "ユーザ - Users", admin_users_path %>
          <%= admin_menu_item "実績 - Achievements", admin_achievements_path %>
          <%= admin_menu_item "宝物 - Treasures", admin_treasures_path %>
          <%= admin_menu_item "お知らせ - Notifications", admin_notifications_path %>
          <%= admin_menu_item "エリア - Bounds", admin_bounds_path %>
        </div>
      </div>
      <div class="col-md-9">
        <% if admin_signed_in? %>
          Logged in as <strong><%= current_admin.email %></strong>.
          <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link' %>
        <% end %>
        <% if notice %>
          <div class="alert alert-success" role="alert"><%= notice %></div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger" role="alert"><%= alert %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <% else %>
      <% if notice %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger" role="alert"><%= alert %></div>
      <% end %>
      <%= yield %>
    <% end %>
  </div>
</body>
</html>
